@article{andersson1991,
  title = {Global {{Observing System Experiments}} on {{Operational Statistical Retrievals}} of {{Satellite Sounding Data}}},
  author = {Andersson, E. and Hollingsworth, A. and Kelly, G. and Lönnberg, P. and Pailleux, J. and Zhang, Z.},
  date = {1991-08-01},
  journaltitle = {Monthly Weather Review},
  volume = {119},
