@article{vendrasco2020,
  title = {Potential Use of the {{GLM}} for Nowcasting and Data Assimilation},
  author = {Vendrasco, Eder P. and Machado, Luiz A. T. and Araujo, Carolina S. and Ribaud, Jean-François and Ferreira, Rute C.},
  date = {2020-09-15},
  journaltitle = {Atmospheric Research},
  shortjournal = {Atmospheric Research},
