  author = {Wu, Ting-Chi and Liu, Hui and Majumdar, Sharanya J. and Velden, Christopher S. and Anderson, Jeffrey L.},
  date = {2014-01-01},
  journaltitle = {Monthly Weather Review},
  volume = {142},
  number = {1},
  pages = {49--71},
